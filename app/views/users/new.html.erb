<div class="container,justify-content-center">
     <div class="col-5">
       <%= form_with(model: @user, local: true) do |f| %>
        <div class="form-group">
          <label for="Name"><%= f.label :name %></label>
           <div class="row">
            <div class="col-xs-6"><%= f.text_field :name %></div>
          </div>
          <br>
         <div class="form-group">
           <label for="exampleInputEmail1"><%=f.label :email %></label>
            <div class="row">
             <div class="col-xs-6"><%=f.email_field :email %></div>
          </div>
          <br>
          <div class="form-group">
            <label for="Password"><%= f.label :password %></label>
             <div class="row">
              <div class="col-xs-6"> <%= f.password_field :password %></div>
           </div>
           <br>
           <div class="form-group">
             <label for="Password"><%= f.label :password_confirmation %></label>
              <div class="row">
               <div class="col-xs-6"><%=f.password_field :password_confirmation %></div>
            </div>

            <%=f.submit "Sign Up" %>
            <%end%>
           </div>
          </div>
       </div>
