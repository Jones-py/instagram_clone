<%=link_to '[Create new post]', new_chat_path, class:"nav-link"%>
<div class="container">
  <% @chats.each do |chat| %>
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
     <div class="card text-center shadow  mb-5 bg-white rounded">
      <div class="card-header font-italic text-success">
      </div>
      <div class="card-body">
      <h5 class="Post"></h5>
      <p class="card-text"><%=truncate(chat.post, length:100) %>
        </p><br>
        <% if chat.image.url %>
          <%=image_tag chat.image.url,size: "200x180" %>
        <% end %>
        <br><br>
    </div>
    <div class="card-footer text-muted">
      <small> <%=time_ago_in_words(chat.created_at)%>ago </small>
    </div>
  </div>
  </div>
  </div>
  <%end%>
</div>
